source 'https://rubygems.org'

gem 'rails', '4.1.6'
gem 'pg'                            # Use postgresql as the database for Active Record
gem 'sass-rails', '~> 4.0.3'        # Use SCSS for stylesheets
gem 'uglifier', '>= 1.3.0'          # Use Uglifier as compressor for JavaScript assets
gem 'coffee-rails', '~> 4.0.0'      # Use CoffeeScript for .js.coffee assets and views
gem 'jquery-rails'                  # Use jquery as the JavaScript library
gem 'turbolinks'                    # https://github.com/rails/turbolinks
gem 'jbuilder', '~> 2.0'            # https://github.com/rails/jbuilder
gem 'sdoc', '~> 0.4.0', group: :doc # bundle exec rake doc:rails generates the API under doc/api
gem 'unicorn'                       # Use unicorn as the app server
gem 'devise'

group :development do
  gem 'spring'             # Keeping your application running in the background.
  gem 'better_errors'      # https://github.com/charliesome/better_errors
  gem 'binding_of_caller'  # adding REPL
  gem 'meta_request'       # goo.gl/ma7CeQ
  gem 'pry'                # http://pryrepl.org/
  gem 'pry-rails'          # https://github.com/rweng/pry-rails
end

group :development, :test do
  gem 'rspec-rails', '~> 3.0.0'
  gem 'capybara', '~> 2.3.0'
end
